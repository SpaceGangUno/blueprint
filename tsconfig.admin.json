{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "src/scripts/**/*",
    "src/config/admin-firebase.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  }
}
