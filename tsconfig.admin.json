{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/admin",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/admin/types",
    "sourceMap": true,
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/scripts/**/*",
    "src/config/admin-firebase.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
