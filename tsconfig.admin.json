{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/admin",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/config/admin-firebase.ts",
    "src/scripts/setupAdmin.ts",
    "src/scripts/createAdmin.ts",
    "src/types/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/pages",
    "src/utils"
  ]
}
