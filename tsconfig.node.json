{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "paths": {
      "firebase-admin/*": ["./node_modules/firebase-admin/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "src/scripts/**/*"
  ]
}
