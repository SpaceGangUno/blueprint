{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/config/admin-firebase.ts",
    "src/scripts/setupAdmin.ts",
    "src/scripts/createAdmin.ts"
  ],
  "exclude": ["node_modules"]
}
